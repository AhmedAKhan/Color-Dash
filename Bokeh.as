package  {		import flash.display.Sprite;	import flash.geom.*;	import flash.filters.BlurFilter;	import flash.display.BitmapData;	import flash.display.Bitmap;		public class Bokeh extends Bitmap {		public function Bokeh(w:int, h:int) {			var bokeh:Sprite = new Sprite();			bokeh.graphics.lineStyle(4,0xFFFFFF, 0.03);			bokeh.graphics.beginFill(0xFFFFFF,0.03);			bokeh.graphics.drawCircle(0,0,20);			var bf:BlurFilter = new BlurFilter(12,12,2);			bitmapData = new BitmapData(w,h,true,0);			blendMode="add";			var mat:Matrix = new Matrix();			for (var i=0; i<3; i++) {				for (var j=0; j<w/80; j++) {					mat.identity();					mat.scale(4-i, 4-i);					mat.translate(Math.random()*w, Math.random()*h);					bitmapData.draw(bokeh,mat,null,"add");				}				bitmapData.applyFilter(bitmapData, new Rectangle(0,0,w,h), new Point(), bf);			}		}	}}