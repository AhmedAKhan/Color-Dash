package {		import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.geom.ColorTransform;	import flash.geom.Rectangle;		public class CloudySky extends StarrySky {				public static const BASE_X = 300; // The width of clouds		public static const BASE_Y = 160; // The height of clouds				public function CloudySky(w:uint, h:uint) {			// Draw the starry sky			super(w,h);			// Make the bitmap data for the clouds			var clouds:BitmapData = new BitmapData(w,h);			// Draw perlin noise onto the clouds bitmap data			clouds.perlinNoise(BASE_X, BASE_Y, OCTS, Math.random()*1000, true, true, 15, true);			// Adjust the alpha of clouds with a colour transform			var colTrans:ColorTransform = new ColorTransform();			colTrans.alphaOffset = -120;			clouds.colorTransform(new Rectangle(0,0,w,h), colTrans);			// Make the bitmap object to display the clouds			var cloudsBitmap:Bitmap = new Bitmap(clouds);			addChild(cloudsBitmap);			// Using the add blend mode enhances colours underneath			cloudsBitmap.blendMode="add"; // Optional line...		}	}}