package {		import flash.display.Sprite;	import flash.display.GradientType;	import flash.geom.Rectangle;	import flash.geom.Matrix;		public class LinearSky extends Sprite {				// Make a sky object with a specific width and height		public function LinearSky(w:uint, h:uint) {			// Set up the required elements of a gradient			var colours = [ 0xFFFFFF, 0 ]; // White to Black			var alphas = [ 1, 1 ]; // Fully opaque			var ratios = [ 0, 255 ]; // Left edge to right edge			var matrix:Matrix = new Matrix(); // Make a Matrix for the gradient			// Tell the Matrix to make a gradient box the full size of the sky			matrix.createGradientBox(w, h, -Math.PI/2);			// Draw the background			graphics.beginGradientFill(GradientType.LINEAR, colours, alphas, ratios, matrix);			graphics.drawRect(0,0,w,h);			graphics.endFill();		}	}}